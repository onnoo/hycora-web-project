<!DOCTYPE html>
<html>

<head>
	<title><%=title %></title>
	<meta charset="utf-8">
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<script>
		function addElement () {
			const newChild = document.createElement('p');
			const textNode = document.createTextNode(document.getElementById('input').value);
			newChild.appendChild(textNode);
			const parent = document.getElementById('comments');
			const children = parent.childNodes;

			if(children.length=0){
				parent.appendChild(newChild)
			}
			else{
				const fistChild = children[0]
				parent.insertBefore(newChild, fistChild);
			}
			document.getElementById('input').value = ''
		}
	</script>
</head>

<body>
	<input type="text" id="input">
	<button onclick="addElement()">쓰기</button>
	<div id="comments">
		<!-- children -->
		<ul>
			<% for (var user of userData) { %>
			<li>
				<%= user.CONTENT %>
			</li>
			<% } %>
		</ul>
	</div>
	<script src="/reload/reload.js"></script>
</body>

</html>